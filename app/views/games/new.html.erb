<div class="container text-center p-3">
  <h1>New Game</h1>
  <ul>
    <%@random_letters.each do |letter|%>
      <li class="d-inline-block btn btn-info"><%= letter %></li>

    <%end%>
  </ul>

  <form action="/score" data-turbo="false" method="post">
    <label for="word">What is the Longest word you can find?</label>
    <input type="text", id="word" name="word" placeholder="dinosaur">
    <input type="submit">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :random_letters, @random_letters %>
 </form>
</div>
